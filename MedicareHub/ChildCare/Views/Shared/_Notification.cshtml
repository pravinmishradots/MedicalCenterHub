@{
}


@{
    var model = ViewData["NotificationModel"] as ChildCare.Models.Notification;
    if (model == null)
    {
        if (TempData["NotificationModel"] != null)
        {
            model = Newtonsoft.Json.JsonConvert.DeserializeObject<ChildCare.Models.Notification>(TempData["NotificationModel"].ToString());
        }
    }
}
@if (model != null)
{
    <div class="alert alert-@(model.Type.ToString().ToLower()) alert-dismissable">
        @*<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>*@
        @(model.Message)
    </div>
}

