            <div class="col-sm-3" style="margin-left: -40px;">
            <label class="col-form-label form-check-label" asp-for="IsActive"></label>
            </div>
            <div class="col-sm-9">
            <label class="form-check-label">
            <input type="checkbox" asp-for="IsActive" class="form-check-input" />
            <span class="slider round"></span>
            </label>
            </div>
            </div></br>*@
        </div>
        <partial name="_ModalFooter" model="new ModalFooter { }" />
    </form>
</div>

