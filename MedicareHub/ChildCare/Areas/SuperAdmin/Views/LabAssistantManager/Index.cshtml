@using ChildCare.Models.Common;
@using static ChildCare.Code.LIBS.Enums;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_AreaLayout.cshtml";
}

@*@section styles{

    <link href="~/content/bootstrap-switch.css" rel="stylesheet" />
}*@

<section>
    <div class="card">
        <div class="card-header">
            <div class="card-tools">


                <button type="button" class="btn btn-success" title="Add New Lab " data-bs-toggle="modal" data-bs-target="#modal-add-edit-lab" href="/SuperAdmin/LabAssistantManager/AddEditLabAssistant">
                    <i class="bi bi-align-middle"></i>  Add New Assistant
                </button>
            </div>
        </div>

        <div class="card-body table-responsive">
            <table id="grid-lab-list" class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>#</th>
                        <th> Name</th>
                        <th>Email</th>
                        <th>User</th>
                        <th>Created</th>
                        @*   <th>Active</th>*@
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>

</section>

@{
    <partial name="_modal" model='new Modal { ID="modal-add-edit-lab" , AreaLabeledId ="modal-add-edit-lab-label" , Size = ModalSize.Large }' />
    <partial name="_modal" model='new Modal { ID="modal-delete-lab" , AreaLabeledId ="modal-delete-lab-label" , Size = ModalSize.Small }' />
}

@section Scripts{
    <script src="~/scripts/bootstrap-switch.js"></script>
    <script src="~/custom/labassistant/labassistant.js"></script>



    }




